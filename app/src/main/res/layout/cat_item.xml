<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cat_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <ImageView
                android:id="@+id/imageCard_t7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/careerCard_t7"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_person" />

            <TextView
                android:id="@+id/nameCard_t7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageCard_t7"
                android:padding="8dp"
                android:text="Name"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ageCard_t7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/nameCard_t7"
                android:layout_toEndOf="@+id/imageCard_t7"
                android:padding="8dp"
                android:text="Age"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/colorCard_t7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ageCard_t7"
                android:layout_toEndOf="@+id/imageCard_t7"
                android:padding="8dp"
                android:text="Color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/careerCard_t7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/colorCard_t7"
                android:layout_toEndOf="@+id/imageCard_t7"
                android:padding="8dp"
                android:text="Career"
                android:textSize="14sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>