<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oleman.androidtasks.Settings.ActivitySettings">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/general_settings"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/renameTasks_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_settings_selector"
        android:drawableEnd="@drawable/arrow_right_black"
        android:fontFamily="sans-serif"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/rename_tasks_settings"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp" />

    <Button
        android:id="@+id/theme_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/renameTasks_settings"
        android:background="@drawable/buttons_settings_selector"
        android:drawableEnd="@drawable/arrow_right_black"
        android:fontFamily="sans-serif"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/settings_app_theme"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp" />

    <Button
        android:id="@+id/font_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/theme_settings"
        android:background="@drawable/buttons_settings_selector"
        android:drawableEnd="@drawable/arrow_right_black"
        android:fontFamily="sans-serif"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/settings_font_size"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/font_settings"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:paddingStart="16dp"
        android:text="@string/settings_animation"
        android:textAlignment="textStart"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/swAnimation_settings" />

    <Switch
        android:id="@+id/swAnimation_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/font_settings"
        android:paddingEnd="16dp"
        android:paddingStart="8dp"/>

</RelativeLayout>
